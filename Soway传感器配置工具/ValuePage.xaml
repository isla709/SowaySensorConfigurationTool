<Page x:Class="Soway传感器配置工具.ValuePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Soway传感器配置工具"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ValuePage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <UniformGrid Columns="3">
            <GroupBox Header="原始AD值" Margin="5">
                <TextBlock x:Name="tb_ADValue" Text="" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"/>
            </GroupBox>
            <GroupBox Header="原始AD值(HEX)" Margin="5">
                <TextBlock x:Name="tb_ADValueHex" Text="" TextAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="20"/>
            </GroupBox>
            <Button x:Name="btn_StartGetValue" Content="启动采集" Margin="7" Click="btn_StartGetValue_Click"/>
        </UniformGrid>

        <Border x:Name="tb_logValue" Grid.Row="1">
            <UniformGrid Columns="2">
                <ScrollViewer>
                    <TextBlock x:Name="logdisplay" Text=""/>
                </ScrollViewer>
                
                <ListView x:Name="ValueList"/>
            </UniformGrid>
        </Border>
    </Grid>
</Page>
