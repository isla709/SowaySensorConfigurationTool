<Page x:Class="Soway传感器配置工具.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Soway传感器配置工具"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage" Loaded="Page_Loaded">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="传感器地址" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox Grid.Column="0" x:Name="AddressComboBox" SelectedIndex="0" VerticalAlignment="Center" Margin="0,0,5,0">
                    <ComboBoxItem>41</ComboBoxItem>
                    <ComboBoxItem>42</ComboBoxItem>
                    <ComboBoxItem>43</ComboBoxItem>
                    <ComboBoxItem>44</ComboBoxItem>
                </ComboBox>

                <Button Grid.Column="1" x:Name="SetAddressButton" Content="设置" Width="60" Height="22" Click="SetAddressButton_Click"/>
            </Grid>
        </GroupBox>


        <GroupBox Grid.Row="1" Header="波特率设置" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="BaudRateCombobox" SelectedIndex="2" Margin="5">
                    <ComboBoxItem Tag="01">2400</ComboBoxItem>
                    <ComboBoxItem Tag="02">4800</ComboBoxItem>
                    <ComboBoxItem Tag="03">9600</ComboBoxItem>
                    <ComboBoxItem Tag="04">19200</ComboBoxItem>
                    <ComboBoxItem Tag="05">38400</ComboBoxItem>
                    <ComboBoxItem Tag="06">57600</ComboBoxItem>
                    <ComboBoxItem Tag="07">115200</ComboBoxItem>
                </ComboBox>
                <Button Grid.Column="1" x:Name="SetBaudButton" Content="设置" Width="60" Height="22" Click="SetBaudButton_Click"/>
            </Grid>

        </GroupBox>

        <GroupBox Grid.Row="2" Header="波特率设置" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="FilteringCombobox" SelectedIndex="0" Margin="5">
                    <ComboBoxItem Tag="01">实时</ComboBoxItem>
                    <ComboBoxItem Tag="02">平滑</ComboBoxItem>
                    <ComboBoxItem Tag="03">平稳</ComboBoxItem>
                </ComboBox>
                <Button Grid.Column="1" x:Name="SetFilteringButton" Content="设置" Width="60" Height="22" Click="SetFilteringButton_Click"/>
            </Grid>

        </GroupBox>



        <Border Grid.Row="3" 
                BorderBrush="LightGray" 
                BorderThickness="1">
            <TextBlock x:Name="logdisplay" Text=""/>
        </Border>
    </Grid>
</Page>
