<Window x:Class="Soway传感器配置工具.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Soway传感器配置工具"
        mc:Ignorable="d"
        Title="Soway压力油位传感器配置工具" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <ControlTemplate x:Key="LabelCombobox">
            <Grid Margin="0,0,0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="LC_Label" Content="{Binding Tag,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentControl}}" Grid.Column="0" Margin="0,0,0,0"/>
                <ComboBox x:Name="LC_Combobox" Margin="2,0,10,0" Grid.Column="1"/>
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="LabelTextbox">
            <Grid Margin="0,0,0,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="LT_Label" Content="{Binding Tag,RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentControl}}" Grid.Column="0" Margin="0,0,0,0"/>
                <TextBox x:Name="LT_Textbox" Text="" Grid.Column="1" Margin="0" TextAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>

        </ControlTemplate>
        
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid Margin="0,0,0,10" Grid.Row="0"> 
            <Grid Grid.Row="1"  Margin="10,20,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="359*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="185*"/>
                </Grid.ColumnDefinitions>
      
                <StackPanel Margin="0,0,5,0" Grid.Column="0">
                    <ContentControl x:Name="cc_Port" Template="{StaticResource LabelCombobox}" Tag="端口:"/>
                    <ContentControl x:Name="cc_Baud" Template="{StaticResource LabelCombobox}" Tag="波特率:"/>
                </StackPanel>

                <Button x:Name="btn_PortSwitch" Content="打开" Margin="0,0,10,10" Grid.Column="1" Click="btn_PortSwitch_Click"/>
                <Button x:Name="btn_reloadports" Content="刷新端口" Margin="0,0,10,10" Grid.Column="2" Click="btn_reloadports_Click"/>

                <StackPanel Grid.Column="3">
                    <ContentControl x:Name="cc_Deviceaddr" Template="{StaticResource LabelTextbox}" Tag="从机地址"/>
                    <Button x:Name="btn_FindDevice" Content="搜索设备" Height="27" Click="btn_FindDevice_Click"/>
                </StackPanel>
              
            </Grid>
        </Grid>

        <TabControl Grid.Row="1" TabStripPlacement="Left">
            <TabItem Header="地址与波特率">
                <Frame x:Name="Frame_SettingPage" Source="SettingsPage.xaml" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem Header="实时数据读取">
                <Frame x:Name="Frame_ValuePage" Source="ValuePage.xaml" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem Header="标定记录">
                <Frame x:Name="Frame_CalibrationPage" Source="CalibrationPage.xaml" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
