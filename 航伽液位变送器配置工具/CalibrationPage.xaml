<Page x:Class="航伽液位变送器配置工具.CalibrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:航伽液位变送器配置工具"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalibrationPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="171*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="171*"/>
                <ColumnDefinition Width="138*"/>
                <ColumnDefinition Width="160*"/>
            </Grid.ColumnDefinitions>
            <Label Content="容积值" VerticalContentAlignment="Center" HorizontalAlignment="Center" FontSize="16" Width="58"/>
            <TextBox x:Name="tb_inputData" Text="" Margin="0,35,5,35" Grid.Column="1" VerticalContentAlignment="Center" TextAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <Label Content="实时数值" VerticalContentAlignment="Center" HorizontalAlignment="Center" FontSize="16" Margin="0,35,0,35" Grid.Column="2" Width="74" IsEnabled="True"/>
            <TextBox x:Name="tb_DeviceValue" Text="" Grid.Column="3" VerticalAlignment="Center" Margin="2,0,10,0" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
            <Button x:Name="btn_SaveData" Content="记录数据" Grid.Column="4" Margin="20,15,20,15" Click="btn_SaveData_Click"/>
            <UniformGrid Grid.Column="5" Rows="2">
                <Button x:Name="btn_outList" Content="导出列表" Margin="10,15,5,3" Click="btn_outList_Click"/>
                <Button x:Name="btn_ClearList" Content="清空列表" Margin="10,3,5,15" Click="btn_ClearList_Click"/>
            </UniformGrid>

        </Grid>
        <ScrollViewer Grid.Row="1">
            <ListView x:Name="lv_CalibrationData">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="容积值" DisplayMemberBinding="{Binding Key}" Width="150"/>
                        <GridViewColumn Header="传感器读数" DisplayMemberBinding="{Binding Value}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
        

    </Grid>
</Page>
